<section class="d-flex justify-content-center align-items-center" style="min-height: 68vh;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card bg-black">
          <div class="card-header bg-primary text-white text-center">
            <h4>Login Session</h4>
          </div>
          <% flash.each do |key, value| %>
            <div data-controller="flash-message" data-action="click->flash-message#removeMessage" id="flash-message" class="flash <%= key %> alert alert-danger bold text-black" data-flash-message-target="message"><%= value %></div>
          <% end %>
          <div class="card-body">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name) ) do |f| %>
              <div class="mb-3 text-white">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email", class: "form-control", placeholder: "Email" } %>
              </div>
              <div class="mb-3 text-white">
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password", class: "form-control", placeholder: "Senha" } %>
              </div>
              <% if devise_mapping.rememberable? %>
                <div class="mb-3 form-check">
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <%= f.label :remember_me, class: "form-check-label text-white" %>
                </div>
              <% end %>
              <div class="d-grid gap-2">
                <%= f.button :submit, "Entrar", class: "btn btn-primary btn-block" %>
              </div>
            <% end %>
            <div class="mt-3 text-center">
              <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Esqueceu sua senha?", new_admin_user_password_path(resource_name), class: "text-decoration-none" %><br />
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
